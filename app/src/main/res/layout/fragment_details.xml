<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/details_layout"
    tools:context=".view.DetailsFragment">


    <ImageView
        android:id="@+id/article_iv"
        android:layout_width="@dimen/article_image_width_for_details"
        android:layout_height="@dimen/article_image_height_for_details"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/article_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/article_padding_for_views_normal"
        android:layout_marginTop="@dimen/article_padding_for_views_normal"
        android:layout_marginEnd="@dimen/article_padding_for_views_normal"
        style="@style/Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/article_iv" />

    <TextView
        android:id="@+id/article_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/article_padding_for_views_normal"
        android:layout_marginTop="@dimen/article_padding_for_views_normal"
        style="@style/Text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/article_title" />

    <TextView
        android:id="@+id/article_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/article_padding_for_views_normal"
        android:layout_marginEnd="@dimen/article_padding_for_views_normal"
        style="@style/Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/article_title" />

    <TextView
        android:id="@+id/article_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/article_padding_for_views_normal"
        android:layout_marginTop="@dimen/article_padding_for_views_normal"
        android:layout_marginEnd="@dimen/article_padding_for_views_normal"
        style="@style/Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/article_author" />
</androidx.constraintlayout.widget.ConstraintLayout>